{
    "compilerOptions": {
        "module": "ES2015",
        "target": "ES2015",
        "moduleResolution": "node",
        "removeComments": true,
        "allowSyntheticDefaultImports": true,
        "noImplicitAny": false,
        "sourceMap": true,
        "outDir": "./lib",
        "jsx": "react",
        "experimentalDecorators": true,
        "noLib": false,
        "declaration": false,
        "emitDecoratorMetadata": true,
        "allowJs": true
    },
    "exclude": [
        "node_modules"
    ]
}